{{#section 'title'}}
Product List
{{/section}}

{{#section 'js'}}
    <script type="text/javascript">
        $('.removeItem').on('click', function() {
            var id = $(this).data('proId');
            $('#txtProId_R').val(id);
            $('#frmRemoveItem').submit();
        });
    </script>
{{/section}}


<div style="text-align: center;">
    <h1>Quản lý giỏ hàng</h1>
<img src="/image/line.svg"></div>
<div class="allcontain">
    <!-- Cart -->
    <section class="cart bgwhite p-t-70 p-b-100">
        <div class="container">
            <form id="frmRemoveItem" method="post" action="/cart/remove">
                        <input id="txtProId_R" type="text" name="ProId">
                    </form>
            <!-- Cart item -->
            <div class="container-table-cart pos-relative">

                <div class="wrap-table-shopping-cart bgwhite">
                    <table id="myTable" class="table-shopping-cart">
                        <tr class="table-head">
                            <th class="column-1"></th>
                            <th class="column-2">Tên sản phẩm</th>
                            <th class="column-3">Đơn giá</th>
                            <th class="column-4">Số lượng</th>
                            <th class="column-5">Thành tiền</th>
                            <th class="column-6">Thao tác</th>
                        </tr>
                        <tbody id="list">
                            {{#each items}}
                            <tr class="table-row">
                                <td class="column-1">
                                    <div class="cart-img-product b-rad-4 o-f-hidden">
                                        <img src="../image/cart/car5.jpg" alt="IMG-PRODUCT">
                                    </div>
                                </td>
                                <td class="column-2">{{Product.ProID}} -  <a href="/{{Product.CatID}}/{{Product.ProName}}"> {{Product.ProName}}</a></td>
                                <td class="column-3">{{number_format Product.Price}}</td>
                                <td class="column-4">{{Quantity}}</td>
                                <td class="column-5">${{number_format Amount}}</td>
                                <td class="column-6">
                                    {{!-- <a data-proid="{{Product.ProID}}" class="btn btn-xs btn-danger removeItem" href="javascript:;" role="button">
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </a> --}}
                                    <button data-proid="{{Product.ProID}}" href="javascript:;" id="b1" value="Delete" onclick="leteRow(this)"
                                    class="btn-num-product-down removeItem color1 flex-c-m size7 bg8 eff2">
                                        Xóa
                                    </button>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                        
                    </table>
                </div>
            </div>
            <div class="flex-w flex-sb-m p-t-25 p-b-25 bo8 p-l-35 p-r-60 p-lr-15-sm">
                <div class="size10 trans-0-4 m-t-10 m-b-10">
                    <!-- Button -->
                    <button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
                    Cập nhật giỏ hàng
                    </button>
                </div>
            </div>
            <!-- Total -->
            <div class="bo9 w-size18 p-l-40 p-r-40 p-t-30 p-b-38 m-t-30 m-r-0 m-l-auto p-lr-15-sm">
                <h5 class="m-text20 p-b-24">
                Tổng tiền giỏ hàng
                </h5>
                <div class="flex-w flex-sb-m p-t-26 p-b-30">
                    <span class="m-text22 w-size19 w-full-sm">
                        Tổng tiền:
                    </span>
                    <span class="m-text21 w-size20 w-full-sm">
                        ${{n}}
                    </span>
                </div>
                <div class="size15 trans-0-4">
                    <!-- Button -->
                    <button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
                    Tiến hành thanh toán
                    </button>
                </div>
            </div>
        </div>
    </section>
</div>