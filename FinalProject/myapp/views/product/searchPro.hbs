{{#section 'title'}} Result {{/section}} {{#if noproduct}}
<div class="garm" style="font-weight:800;text-align:center;margin-top:50px;color"><h1>Không có sản phẩm thoả yêu cầu</h1></div>
{{else}}
<div class="allcontain" style="margin-top:50px">
        <div class="panel panel-primary">
            <div class="panel-heading ">
                <h1 class="panel-title" style="text-align: center;font-size:30px">KẾT QUẢ TÌM KIẾM</h1>
            </div>
            <div class="row" style="margin-top:20px;">
                {{#each prosearch}}

                <div class="col-sm-3 col-md-4 ">
                    <div class="thumbnail boxpro">
                        <img src="/image/products/{{ProID}}/1.jpg" alt="{{ProName}}" title="{{ProName}}">
                        <div class="caption">
                            <h3 style="color:brown;font-weight:bold">{{ProName}}</h3>
                            <h4 style="color:darkslategray;text-align:center;font-weight:bold">{{number_format Price}} &dollar;</h4>
                            <p style="min-height: 60px">{{TinyDes}}</p>
                            <p>
                                <a href="/{{CatID}}/{{ProName}}" class="btn btn-primary" role="button">
                                    <span class="glyphicon glyphicon-menu-right"></span>
                                    Xem chi tiết
                                </a>
                                <a href="#" class="btn btn-danger" role="button">
                                    <span class="glyphicon glyphicon-shopping-cart"></span>
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
</div>
{{/if}}